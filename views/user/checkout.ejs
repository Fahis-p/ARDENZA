                        timer: 1500
                    });
                }
            } catch (error) {
                console.error("Error removing coupon:", error);
                document.getElementById("couponMessage").style.color = "red";
                document.getElementById("couponMessage").innerText = "Error removing coupon. Please try again.";
            }
        }

